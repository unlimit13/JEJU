import java.util.*;
import java.sql.*;

public class JEJU {

	public static void main(String[] args) throws InterruptedException {
		Scanner scan = new Scanner(System.in);
		int bit;
		
	FIRST: while(true) {	
		System.out.println("-----------------");
		System.out.println("1. sign up");
		System.out.println("2. sign in");
		System.out.println("3. Exit");
		System.out.println("-----------------");
		
		bit = scan.nextInt();
		String detail;
		
		if(bit ==1) {
			System.out.println("-----------------");
			System.out.println("ID : ");
			System.out.println("PW : ");
			System.out.println("Sex(F,M) : ");
			System.out.println("Age : ");
			System.out.println("plan to visit[E,W,S,N] : ");
			System.out.println("-----------------");
			
			detail = scan.next();
			System.out.println("Sign up complete!");
			Thread.sleep(2000);
			continue FIRST;
		}
		else if(bit==2) {
			System.out.println("ID : ");
			System.out.println("PW : ");
			
			Thread.sleep(2000);
			
			System.out.println("-----------------");
			System.out.println("1. 숙박");
			System.out.println("2. 식당");
			System.out.println("3. 관광");
			System.out.println("4. 순위확인");
			System.out.println("-----------------");
			
			Thread.sleep(3000);
			
			System.out.println("Select 1 or 2");
			System.out.println("-----------------");
			System.out.println("1. 제주스러운");
			System.out.println("2. 럭셔리한");
			System.out.println("-----------------");
			
			Thread.sleep(2000);
			
			System.out.println("Select 1 or 2");
			System.out.println("-----------------");
			System.out.println("1. 친구들과");
			System.out.println("2. 가족들과");
			System.out.println("-----------------");
			
			Thread.sleep(2000);
			
			System.out.println("Select 1 or 2");
			System.out.println("-----------------");
			System.out.println("1. 독채");
			System.out.println("2. 게스트하우스");
			System.out.println("-----------------");
			
		}
		}
	}
}
